@model PRN222.RoomBooking.Repositories.Data.RoomSlot

@{
    ViewData["Title"] = "Delete Room Slot";
}

<div class="container mt-4">
    <h2 class="page-title text-center">Delete Room Slot</h2>

    <div class="card p-3 mb-4">
        <h4>Are you sure you want to delete this Room Slot?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">Slot Number</dt>
            <dd class="col-sm-10">@Model.SlotNumber</dd>

            <dt class="col-sm-2">Start Time</dt>
            <dd class="col-sm-10">@Model.StartTime?.ToString("HH:mm")</dd>

            <dt class="col-sm-2">End Time</dt>
            <dd class="col-sm-10">@Model.EndTime?.ToString("HH:mm")</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@Model.Status</dd>
        </dl>

        <form asp-action="DeleteRoomSlot" method="post">
            <input type="hidden" asp-for="RoomSlotId" />
            <input type="hidden" asp-for="RoomId" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="ManageRoomSlots" asp-route-id="@Model.RoomId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>