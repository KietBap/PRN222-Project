@model PRN222.RoomBooking.Repositories.Data.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container mt-4">
    <h2 class="page-title text-center">Delete Room</h2>

    <div class="card p-3 mb-4">
        <h4>Are you sure you want to delete this room?</h4>
        <hr />
        @if (!string.IsNullOrEmpty(ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }

        <dl class="row">
            <dt class="col-sm-2">Room Name</dt>
            <dd class="col-sm-10">@Model.RoomName</dd>

            <dt class="col-sm-2">Campus</dt>
            <dd class="col-sm-10">@Model.Campus?.CampusName</dd>

            <dt class="col-sm-2">Capacity</dt>
            <dd class="col-sm-10">@Model.Capacity</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@Model.Status</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="RoomId" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>